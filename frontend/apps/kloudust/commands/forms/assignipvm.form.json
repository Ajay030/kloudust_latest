        "VMName": "वीएम नाम",
        "VMAssignIPCommand": "IP address to assign",
        "VMAssignIPCommandType": "Assignment type",
        "VMAssignIPAssign": "Assign",
        "VMAssignIPUnassign": "Unassign",
        "FieldValidationErrorGeneric": "Validation error",
        "PowerOPVMSubmitLabel": "Submit"
    },
    "ja": {
        "VMAssignIPTitle": "Assign IP to a virtual machine",
        "VMAssignIPDescription": "Assign IP to a virtual machine on the cloud. Complete the required tab then submit.",
        "VMName": "VM名",
