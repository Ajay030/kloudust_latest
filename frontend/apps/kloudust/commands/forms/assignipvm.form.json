{
"id": "assignipvm",
"command": "assignIPToVM",
"type": "kloudust_cmdline",
"kloudust_cmdline_params": ["vm_name", "ip"],

"title": "{{{i18n.VMAssignIPTitle}}}",

"i18n": {
    "en": {
