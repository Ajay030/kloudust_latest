{
"id": "addimage",
"command": "addImage",
"type": "kloudust_cmdline",
"kloudust_cmdline_params": ["name", "uri", "processorarch", "description", "extrainfo", "runasjob", "retryonfailure"],

"title": "{{{i18n.AddImageTitle}}}",

"i18n": {
    "en": {
        "AddImageTitle": "Add image",
